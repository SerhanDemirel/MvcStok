@using MvcStok.Models.Entity;
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
    {
        <p>
            Aranacak Musteri Adi:@Html.TextBox("p")
            <input type="submit" value="Ara" />
        </p>
    }

<table class="table table-bordered">
    <tr>
        <th>MUSTERI ID</th>
        <th>MUSTERI ADI</th>
        <th>MUSTERI SOYADI</th>
        <th>Sil</th>
        <th>Guncelle</th>
        <th>Alert</th>

    </tr>
    <tbody>
        @foreach (var musteri in Model)
        {
            <tr>
                <th>@musteri.MUSTERIID</th>
                <td>@musteri.MUSTERIAD</td>
                <td>@musteri.MUSTERISOYAD</td>
                <td><a href="/MUSTERI/SIL/@musteri.MUSTERIID" class="btn btn-danger">Sil</a></td>
                <td><a href="/MUSTERI/MusteriGetir/@musteri.MUSTERIID" class="btn btn-success">Guncelle</a></td>
                <td>@Html.ActionLink("SIL BUTONU", "SIL", new { id = musteri.MUSTERIID }, new { @class = "btn btn-warning", onclick = "return confirm('Gercekten Silmek Istiyor Musunuz?')" })</td>
            </tr>
            }
    </tbody>



</table>

<a href="/Musteri/YeniMusteri/" class="btn btn-primary">Yeni Musteri Ekle</a>
